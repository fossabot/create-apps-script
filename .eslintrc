{
  "root": true,
  "extends": "standard",
  "plugins": [
    "import",
    "standard",
    "node",
    "promise",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "amd": true
  },
  "overrides": [ {
      "files":["test/**"],
      "globals": {
        "describe": true,
        "it": true,
        "before": true,
        "beforeEach": true,
        "afterEach": true,
        "after":true
      }
  } ],
  "globals": {},
  "rules": {
    "space-in-parens": [
      "error", "always", {"exceptions": ["empty"]}
    ],
    "padded-blocks": "off",
    "space-before-blocks": [
      "error", {"functions": "always"}
    ]
  }
}
