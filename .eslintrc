{
  "root": true,
  "extends": [ "standard", "prettier" ],
  "plugins": [ "import", "standard", "node", "promise", "prettier" ],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "amd": true
  },
  "globals": {},
  "rules": {
    "prettier/prettier": "off",
    "space-in-parens": [ "error", "always", {
      "exceptions": [ "empty" ]
    } ],
    "padded-blocks": "off",
    "space-before-blocks": [ "error", {
      "functions": "always"
    } ],
    "indent": [ "error", 2 ]
  }
}
